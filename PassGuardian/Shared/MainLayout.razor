@inherits LayoutComponentBase
@inject HttpClient Http
@inject User User
@inject Notification notification

<div class="w3-sidebar w3-bar-block bg-light sidebarShadow w3-card w3-animate-left" style="display:none" id="mySidebar">
    <button class="w3-bar-item w3-button close w3-large"
            onclick="w3_close()">
        Close &times;
    </button>
    <a id="home" href="home" onclick="w3_close('title','Home')" class="shadow w3-bar-item borders w3-button">Home</a>
    <a id="password" href="password" onclick="w3_close('title','Password')" class="shadow w3-bar-item borders w3-button">Passwords</a>
    <a id="config" href="configurations" onclick="w3_close('title', 'configurations')" class="shadow w3-bar-item borders w3-button">Configurations</a>
    <a id="singout" href="/" @onclick="SingOut" class="shadow w3-bar-item borders w3-button">Sign Out</a>
</div>

<div id="main">

    <div class="top-bar w3-theme-d2">
        <button id="openNav" class="w3-button w3-xlarge" onclick="w3_open()">&#9776;</button>
        <label class="vertical-center" id="title">PassGuardian</label>
    </div>
    <BlazoredToasts  />
     <div class="w3-container">
         @Body
     </div>

</div>

@code{
    private void SingOut()
    {
        notification.Welcome = false;
    }
}